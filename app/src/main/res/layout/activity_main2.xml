<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt"
    android:gravity="center" android:layout_gravity="center" android:orientation="vertical"
    android:background="@drawable/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:foregroundGravity="center">
    <ImageView android:layout_gravity="center"
        android:id="@+id/imageView"
        android:background="@android:color/background_dark"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_weight="2"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/choosetext"/>
    <LinearLayout android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4">
        <ImageButton android:id="@+id/plane"
            android:background="?android:attr/actionBarDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ship4"
            android:layout_weight="1"/>
    </LinearLayout>
    <Button android:textSize="30sp"
        android:textColor="@android:color/holo_blue_bright"
        android:id="@+id/start" android:background="@android:color/background_dark"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="START"
        android:layout_weight="2"/>
</LinearLayout>
